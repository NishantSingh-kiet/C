//WAP to print series in number form
#include<stdio.h>
#include<conio.h>
int main()
{
    int i, j, n;                                          //variable declaration...............
    printf("enter the number of term to print series ");
    scanf("%d",&n);
    for(i=n; i>1; i--)                                    //logic..................
    {
        for(j=n;j>=1;j--)      
        {
            if(j>i) printf("%d ", j);
            else printf("%d ", i);
        }
        for(j=2;j<=n;j++)
        {
            if(j>i) printf("%d ", j);
            else printf("%d ", i);
        }
        printf("\n");
    }    
    for(i=1; i<=n; i++)
    {
        for(j=n;j>=1;j--)
        {
            if(j>i) printf("%d ", j);
            else printf("%d ", i);
        }
        for(j=2;j<=n;j++)
        {
            if(j>i) printf("%d ", j);
            else printf("%d ", i);
        }
        printf("\n");
    }
    
    return 0;                                          //return type..........
}
